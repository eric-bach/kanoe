{
  "openapi": "3.0.0",
  "info": {
    "title": "Travel Services Bot API",
    "version": "1.0.0",
    "description": "Travel service APIs for a retail store to book flights"
  },
  "paths": {
    "/airport/{city}": {
      "get": {
        "summary": "Get airport code",
        "description": "Based on the provided city name, returns the airport code closest to the city",
        "operationId": "getAirportCode",
        "parameters": [
          {
            "name": "city",
            "in": "path",
            "description": "Name of the city",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get airport code",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "int",
                      "description": "This is the airport code for the city"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/flights/{departureId}/{arrivalId}/{date}": {
      "get": {
        "summary": "Get available flights",
        "description": "Based on the provided departure and arrival airport codes and the date, return available flights for the departure, arrival and date provided",
        "operationId": "getAvailableFlights",
        "parameters": [
          {
            "name": "departureId",
            "in": "path",
            "description": "Departure Airport Code",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "arrivalId",
            "in": "path",
            "description": "Arrival Airport Code",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "date",
            "in": "path",
            "description": "Date",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get available flights",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "int",
                        "description": "This is the flight Id used to book the flight"
                      },
                      "airline": {
                        "type": "string",
                        "description": "The name of the airline"
                      },
                      "departureId": {
                        "type": "string",
                        "description": "The departure airport code"
                      },
                      "departureName": {
                        "type": "string",
                        "description": "The departure city name"
                      },
                      "arrivalId": {
                        "type": "string",
                        "description": "The arrival airport code"
                      },
                      "arrivalName": {
                        "type": "string",
                        "description": "The arrival city name"
                      },
                      "departureDateTime": {
                        "type": "string",
                        "description": "The departure date and time"
                      },
                      "arrivalDateTime": {
                        "type": "string",
                        "description": "The arrival date and time"
                      },
                      "price": {
                        "type": "decimal",
                        "description": "The price of the trip"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/flights/bookings/{id}": {
      "post": {
        "summary": "Create a flight booking for a member",
        "description": "Create a booking for a member using the flight id and member Id",
        "operationId": "createBooking",
        "parameters": [
          {
            "name": "memberId",
            "in": "query",
            "description": "Member Id",
            "required": true,
            "schema": {
              "type": "int"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "Flight Id",
            "required": true,
            "schema": {
              "type": "int"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Create flight booking for a member",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bookingId": {
                      "type": "int",
                      "description": "Booking Confirmation Id"
                    },
                    "memberId": {
                      "type": "int",
                      "description": "Member Id"
                    },
                    "flightId": {
                      "type": "int",
                      "description": "Flight Id"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
